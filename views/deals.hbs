<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Deals | 8 Bit Bazaar</title>
    <meta name="description" content="Website of old products">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/style-products.css" />
    <link rel="shortcut icon" href="/images/favicon.png" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</head>
<body>
    {{> header}}

    <main>
        <div class="welcome">
            <span class="welcome-title">Deals</span>
        </div>
        <div class="products">
            {{#if products.length}}
                {{#each products}}
                    <div class="product" id="{{this.code}}">
                        <div class="product-image-wrapper">
                            <img src="{{this.picture_path}}" alt="Product Image" class="product-image">
                            <img src="/images/hot-deal.png" alt="Hot Deal" class="hot-deal">
                        </div>
                        <div class="product-details">
                            <h2 class="product-name">{{this.name}}</h2>
                            <p class="type">NES cartridge</p>
                            <div class="price">
                                <span class="price-old">$ {{this.roundedPrice}}</span>
                                <span class="price-new">$ {{this.discountedPrice}}</span>
                            </div>
                            <span class="product-quantity">Quantity: {{this.quantity_in_stock}}</span>
                            <p class="description">{{this.description}}</p>
                            <button class="add-to-cart-btn" onclick="addToCart('{{this.code}}')">Add to cart</button>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <p>No deals available at the moment.</p>
            {{/if}}
        </div>

        {{> footer}}
    </main>

    <script src="/js/scripts.js"></script>
    {{#if toastrMessage}}
    <script>
        toastr.success('{{toastrMessage}}', 'Success');
    </script>
    {{/if}}
</body>
</html>
